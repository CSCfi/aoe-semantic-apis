{
  "name": "koodisto-service",
  "version": "1.0.0",
  "main": "src/server.ts",
  "repository": "https://kalleurhoilmari@bitbucket.org/kalleurhoilmari/koodisto-service.git",
  "author": "Kalle Lehtonen <kalle.lehtonen@digia.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "yarn run serve",
    "build": "yarn run build-ts && yarn run tslint",
    "serve": "node dist/server.js",
    "watch-node": "nodemon dist/server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json"
  },
  "dependencies": {
    "@types/dotenv": "^6.1.0",
    "body-parser": "^1.18.3",
    "compression": "^1.7.3",
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
    "request": "^2.88.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.0",
    "@types/compression": "^0.0.36",
    "@types/express": "^4.16.0",
    "@types/node": "^10.12.18",
    "@types/request": "^2.48.1",
    "concurrently": "^4.1.0",
    "nodemon": "^1.18.9",
    "ts-node": "^7.0.1",
    "tslint": "^5.12.0",
    "typescript": "^3.2.2"
  }
}
